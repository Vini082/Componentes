<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:text="Escolha"
            android:textStyle="bold"
            android:textColor="#637AB7"
            android:textSize="20sp"/>
            

    <CheckBox
        android:id="@+id/chkLivros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Livros"/>

    <CheckBox
        android:id="@+id/chkMusica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musicas"/>

    <CheckBox
        android:id="@+id/chkCinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinema"/>

    <CheckBox
        android:id="@+id/chkEsporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esporte"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:text="Escolha"
            android:textStyle="bold"
            android:textColor="#637AB7"
            android:textSize="20sp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verdadeiro"
                android:id="@+id/rdbVerdadeiro"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Falso"
                android:id="@+id/rdbFalso"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:text="Geral"
            android:textStyle="bold"
            android:textColor="#637AB7"
            android:textSize="20sp"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:checked="true"
            android:id="@+id/swtWifi"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:checked="true"
            android:id="@+id/swtBluetooth"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo avião"
            android:checked="true"
            android:id="@+id/swtMaviao"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não pertube"
            android:checked="true"
            android:id="@+id/swtNpertube"/>

    </LinearLayout>
    
    




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_ac_unit" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/idFABExtend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="20dp"
        android:text="New tasks"
        app:icon="@drawable/baseline_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>